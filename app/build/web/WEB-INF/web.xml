<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>AuthenticateAdminServlet</servlet-name>
        <servlet-class>servlet.AuthenticateAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadFileServlet</servlet-name>
        <servlet-class>servlet.UploadFileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BootstrapServlet</servlet-name>
        <servlet-class>servlet.BootstrapServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BasicBreakdownServlet</servlet-name>
        <servlet-class>servlet.BasicBreakdownServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HeatmapServlet</servlet-name>
        <servlet-class>servlet.HeatmapServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BasicPopularPlacesServlet</servlet-name>
        <servlet-class>servlet.BasicPopularPlacesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BasicCompanionsServlet</servlet-name>
        <servlet-class>servlet.BasicCompanionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BasicNextPlacesServlet</servlet-name>
        <servlet-class>servlet.BasicNextPlacesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutomaticGroupDetectionServlet</servlet-name>
        <servlet-class>servlet.AutomaticGroupDetectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupPopularPlacesServlet</servlet-name>
        <servlet-class>servlet.GroupPopularPlacesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupNextPlacesServlet</servlet-name>
        <servlet-class>servlet.GroupNextPlacesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin</servlet-name>
        <jsp-file>/admin_panel.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticateAdminServlet</servlet-name>
        <url-pattern>/authenticate_admin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadFileServlet</servlet-name>
        <url-pattern>/json/update</url-pattern>
        <url-pattern>/uploadfile.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BasicPopularPlacesServlet</servlet-name>
        <url-pattern>/json/top-k-popular-places</url-pattern>
        <url-pattern>/popularplaces.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BasicCompanionsServlet</servlet-name>
        <url-pattern>/json/top-k-companions</url-pattern>
        <url-pattern>/companions.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BasicBreakdownServlet</servlet-name>
        <url-pattern>/breakdown.do</url-pattern>
        <url-pattern>/json/basic-loc-report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutomaticGroupDetectionServlet</servlet-name>
        <url-pattern>/AutomaticGroupDetection.do</url-pattern>
        <url-pattern>/json/group_detect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HeatmapServlet</servlet-name>
        <url-pattern>/json/heatmap</url-pattern>
        <url-pattern>/heatmap.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BasicNextPlacesServlet</servlet-name>
        <url-pattern>/json/top-k-next-places</url-pattern>
        <url-pattern>/next_place.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BootstrapServlet</servlet-name>
        <url-pattern>/json/bootstrap</url-pattern>
        <url-pattern>/bootstrap.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupPopularPlacesServlet</servlet-name>
        <url-pattern>/json/top-k-group-popular-places</url-pattern>
        <url-pattern>/grouppopularplaces.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupNextPlacesServlet</servlet-name>
        <url-pattern>/json/top-k-group-next-places</url-pattern>
        <url-pattern>/group_next_places.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>

